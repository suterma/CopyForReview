<platformUi:VsUIDialogWindow x:Class="CopyForReview.Controls.FormatSelector"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:ui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.11.0"
                         xmlns:platformUi="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.12.0"
                         xmlns:copyForReview="clr-namespace:CopyForReview"
                         Title="Copy for..." SizeToContent="WidthAndHeight"
                         ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel>
        <StackPanel Name="StackPanelFormatters" x:FieldModifier="private">
        </StackPanel>
            <CheckBox Name="CheckBoxSelectionFullLines" Content="Expand selection to full lines." IsChecked="True"  Margin="3"/>
            <Button Content="Copy to clipboard." Click="ButtonCopy_Click" Height="48" IsDefault="True" />
        </StackPanel>
    </Grid>
</platformUi:VsUIDialogWindow>