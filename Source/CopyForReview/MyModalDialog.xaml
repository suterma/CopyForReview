<platformUi:DialogWindow x:Class="CopyForReview.MyModalDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.11.0"
    xmlns:platformUi="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.12.0"
    Title="MyModalDialog" Height="320" Width="320">
    <Grid Height="300" Width="300">
        <Grid>
            <Button x:Name="ButtonCancel" Content="Cancel" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" IsCancel="True" RenderTransformOrigin="0.5,0.5"/>
            <StackPanel  Name="StackPanelFormatters" Margin="10,10,10,37"/>

        </Grid>        
        <Button Content="Yes" Name="btnYes" Click="btnYes_Click" Height="25" Width="75" HorizontalAlignment="Left" Margin="0,30,0,0" />
        <Button Content="No" Name="btnNo" Click="btnNo_Click" Height="25" Width="75" HorizontalAlignment="Left" Margin="80,30,0,0" />
    </Grid>
    
    
</platformUi:DialogWindow>